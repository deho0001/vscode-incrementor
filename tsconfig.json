{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": ["es6"],
        "experimentalDecorators": true,
        "removeComments": true,
        "sourceMap": true,
        "rootDir": "src",
        "baseUrl": "./src",
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "~/*": ["./*"]
        }
    },
    "exclude": ["node_modules", ".vscode-test", "old"]
}
